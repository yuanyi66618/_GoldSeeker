# Gold-Seeker 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# =============================================================================
# OpenAI API 配置
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.0

# =============================================================================
# Azure OpenAI 配置（可选）
# =============================================================================
# AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_VERSION=2023-12-01-preview
# AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# =============================================================================
# Anthropic Claude 配置（可选）
# =============================================================================
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# Hugging Face 配置（可选）
# =============================================================================
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here
# HUGGINGFACE_MODEL=microsoft/DialoGPT-medium

# =============================================================================
# 数据库配置（可选）
# =============================================================================
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=your_neo4j_password
# NEO4J_DATABASE=neo4j

# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=gold_seeker
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_postgres_password

# MONGODB_URI=mongodb://localhost:27017/gold_seeker

# =============================================================================
# 缓存配置
# =============================================================================
# CACHE_TYPE=redis  # redis, memory, file
# REDIS_URL=redis://localhost:6379/0
# CACHE_DIR=.cache

# =============================================================================
# 日志配置
# =============================================================================
# LOG_LEVEL=INFO
# LOG_FILE=logs/gold_seeker.log
# LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# 性能配置
# =============================================================================
# MAX_WORKERS=4
# CHUNK_SIZE=10000
# MEMORY_LIMIT=8GB

# =============================================================================
# 输出配置
# =============================================================================
# OUTPUT_DIR=output
# PLOT_DPI=300
# SAVE_INTERMEDIATE_RESULTS=false

# =============================================================================
# 开发配置
# =============================================================================
# DEBUG=false
# TESTING=false
# MOCK_EXTERNAL_APIS=true

# =============================================================================
# 地理空间配置
# =============================================================================
# DEFAULT_CRS=EPSG:4326
# DATA_CRS=EPSG:4326
# OUTPUT_CRS=EPSG:3857

# =============================================================================
# 地球化学分析配置
# =============================================================================
# DEFAULT_CENSORING_METHOD=substitution
# DEFAULT_TRANSFORMATION=clr
# DEFAULT_FRACTAL_METHOD=knee
# DEFAULT_CLASSIFICATION_METHOD=fractal

# =============================================================================
# 机器学习配置
# =============================================================================
# DEFAULT_MODEL=random_forest
# CROSS_VALIDATION_FOLDS=5
# RANDOM_SEED=42
# MODEL_CACHE_DIR=models

# =============================================================================
# Web服务配置（可选）
# =============================================================================
# WEB_HOST=0.0.0.0
# WEB_PORT=8000
# WEB_WORKERS=1
# API_KEY=your_api_key_here

# =============================================================================
# 监控配置（可选）
# =============================================================================
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_PORT=9090

# =============================================================================
# 安全配置
# =============================================================================
# SECRET_KEY=your_secret_key_here
# ENCRYPTION_KEY=your_encryption_key_here
# JWT_SECRET_KEY=your_jwt_secret_key_here

# =============================================================================
# 第三方服务配置（可选）
# =============================================================================
# GOOGLE_API_KEY=your_google_api_key_here
# MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here
# AWS_ACCESS_KEY_ID=your_aws_access_key_here
# AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
# AWS_REGION=us-west-2

# =============================================================================
# 自定义配置
# =============================================================================
# CUSTOM_SETTING_1=value1
# CUSTOM_SETTING_2=value2